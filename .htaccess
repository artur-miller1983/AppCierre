RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]


# ðŸ”¹ Manejo de errores personalizados
ErrorDocument 404 /AppCierre/error.php
ErrorDocument 403 /AppCierre/error.php

# ðŸ”¹ Evitar listado de directorios
Options -Indexes